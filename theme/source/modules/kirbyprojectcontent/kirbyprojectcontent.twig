		<ul class="meta cf">
			<li><b>Year:</b> <time>{{ page.year }}</time></li>
			<li><b>Tags:</b> {{ page.tags }}</li>
		</ul>

		<div class="text">
		 {{ page.text.kirbytext | raw }}

		 	{% for image in images %}
	 	        <figure>
					<img src="{{ image.url() }}" alt="{{ page.title | raw }}">
